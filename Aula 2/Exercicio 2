let num = Math.floor(Math.random() * 6 + 1)
let tentativa

while (true) {
    tentativa = Number(prompt("Informe um valor entre 1 e 6: "))
    
    if (!tentativa || tentativa > 6) {
        alert("Informe um número válido")
        break;
    }
    else if (tentativa !== num) {
        alert(`Que pena! O número sorteado foi ${num}`)
        break;
    }
    else {
        alert("Parabéns! Você acertou")
        break;
    }
}
